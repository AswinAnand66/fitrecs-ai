# Copy this file to `.env` and fill in real values (do NOT commit `.env`)
DATABASE_URL=postgresql://username:password@localhost:5432/fitrecs
SECRET_KEY=replace-with-a-secure-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REDIS_URL=redis://localhost:6379/0
MODEL_PATH=models/sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
DEFAULT_TOP_K=10
# Backend Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
PROJECT_NAME=FitRecs
SECRET_KEY=your-secret-key  # Change this in production

# PostgreSQL
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password  # Change this in production
POSTGRES_DB=fitrecs

# AI Settings
OPENAI_API_KEY=your-openai-api-key  # Required for AI features
AI_MODEL_NAME=gpt-4  # or gpt-3.5-turbo for lower costs
AI_FEATURES_ENABLED=true  # Set to false to disable AI features